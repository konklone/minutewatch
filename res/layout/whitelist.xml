<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
  android:orientation="vertical" 
  android:layout_width="fill_parent" 
  android:layout_height="fill_parent"> 
  <EditText 
    android:id="@+id/whitelistInput" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:visibility="gone"
    android:numeric="integer"
	android:hint="Enter the number you want ignored" 
  />
  <Button
  	android:id="@+id/whitelistSubmit"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:visibility="gone"
  	android:text="Add Number"
  	/>
  <TextView 
    android:id="@+id/no_numbers_added" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:layout_margin="10dip"
    android:textSize="18dip"
  	android:text="@string/no_whitelists"
  	android:visibility="gone"
  />
  <ListView  
  	android:id="@+id/whitelistedNumbersList" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
  />

</LinearLayout>
